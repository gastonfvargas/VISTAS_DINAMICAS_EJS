<!DOCTYPE html>
<html>
  <%- include("./partials/head") %>
  <body>
    <%- include("./partials/navigation") %>

    <%- include("./partials/header") %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= menu.title  %></h1>
          <br />
          <p class="ps-text-grey" style="text-align: center;"><%= menu.description %></p>
          <% if (menu.description_completed.length <= 0) { %>
            <h4>Plato t√≠pico</h4>
           <% } else { %>
            <h4><%= menu.description_completed %></h4>
          <% } %>
          <p class="ps-text-grey" style="text-align: center;">
            <%= menu.price %>
          </p>  
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= menu.image %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <%- include("./partials/footer") %>
    </div>
  </body>
</html>
